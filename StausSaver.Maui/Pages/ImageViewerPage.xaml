<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StausSaver.Maui.Pages.ImageViewerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:StatusSaver.Maui.ViewModels"
    Title="Image Viewer"
    x:DataType="viewmodels:ImageViewerViewModel"
    Shell.TabBarIsVisible="False">

    <Frame>
        <Frame.GestureRecognizers>
            <SwipeGestureRecognizer Command="{Binding SwipeRightCommand}" Direction="Right" />
            <SwipeGestureRecognizer Command="{Binding SwipeLeftCommand}" Direction="Left" />
            <TapGestureRecognizer Command="{Binding SaveImageCommand}" NumberOfTapsRequired="3" />
        </Frame.GestureRecognizers>

        <Image Aspect="AspectFit" Source="{Binding CurrentImageUri}" />

    </Frame>
</ContentPage>